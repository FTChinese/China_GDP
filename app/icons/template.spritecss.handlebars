.share-links {
	position: absolute;
	right: 20px;
	bottom: 10px;
}
.share-links li {
	display: inline-block;
	padding-left: 1em;
}
.share-link {
	display: block;
	color: #fff;
	padding-left: 1.5em;
	font-size: 16px;
	height: 16px;
	line-height: 16px;
	background-repeat: no-repeat;
}

{{#sprites}}
.share-{{name}} {
  background-image: url(../images/{{{escaped_image}}});
  background-position: {{px.offset_x}} {{px.offset_y}};
}
{{/sprites}}